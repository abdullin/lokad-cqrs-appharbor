<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Url.Content("~/content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/content/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/content/css/site.css")" rel="stylesheet" type="text/css" />
        <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/content/favicon.ico")" />
        <script src="@Url.Content("~/content/js/jquery-1.7.1.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/content/js/bootstrap.min.js")" type="text/javascript"> </script>
        @RenderSection("Head", false)
   

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
            <script src="@Url.Content("~/Content/js/html5.js")"> </script>
        <![endif]-->

    </head>

    <body style="padding-top: 40px;">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>

                    <a class="brand" href="@Url.Action("index", "account")">Lokad Admin</a>
                    
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="@(ViewBag.ActiveMenuId == "accounts" ? "active" : "")"> <a href="@Url.Action("index", "account")">Accounts</a></li>
                        </ul>
                        
                        
                        <form class="navbar-search pull-left">
                            <input type="text" class="search-query" placeholder="Search" id="nav-search">
                        </form>

                        <ul class="nav pull-right">
                            <li>@Html.ActionLink("Log Out ", "Logout", "auth")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        

    
        <section style="padding-top: 20px;">
            @RenderBody()
        </section>
    

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <span >&copy;2006-2012, Lokad. All rights reserved.</span>
                        <span class="pull-right">
                            <a href="http://www.lokad.com/tour.ashx" title="Take Tour">Take tour</a> |
                            <a href="http://www.lokad.com/salescast-sales-forecasting-software.ashx" title="Salescast, sales forecasting software, only WAY easier">Salescast</a> | 
                            <a href="http://www.lokad.com/shelfcheck-on-shelf-availability-optimization.ashx" title="Shelfcheck, on-shelf availability optimization software">Shelfcheck</a> |
                            <a href="http://www.lokad.com/programmers-guide-forecasting-api-v3.ashx" title="Programmer&#39;s guide for the Lokad Forecasting API v3">Forecasting API</a>
                        </span>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
